<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="com.unpar.brokenlinkchecker.v4.Controller" stylesheets="@style.css">

    <!-- ================= Top: Seed URL Input & Buttons ================= -->
    <top>
        <HBox spacing="8" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>
            <Label text="Seed URL" styleClass="input-label"/>
            <TextField fx:id="seedUrlField" promptText="https://informatika.unpar.ac.id" HBox.hgrow="ALWAYS"/>
            <Button fx:id="startButton" text="Start" styleClass="btn-primary"/>
            <Button fx:id="stopButton" text="Stop" styleClass="btn-secondary"/>
        </HBox>
    </top>

    <!-- ================= Center: Main Content ================= -->
    <center>
        <VBox spacing="16">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>

            <!-- ===== Summary & Filters Row ===== -->
            <HBox spacing="16">

                <!-- ===== Summary Section ===== -->
                <VBox spacing="12" prefWidth="600" styleClass="card">
                    <Label text="Summary" styleClass="section-title"/>

                    <GridPane hgap="12" vgap="12">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50"/>
                            <ColumnConstraints percentWidth="50"/>
                        </columnConstraints>

                        <!-- Checking Status -->
                        <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="CENTER" styleClass="summary-box">
                            <Label text="Checking Status" styleClass="summary-subtitle"/>
                            <Label fx:id="statusLabel" text="Checking" styleClass="summary-value-blue"/>
                        </VBox>

                        <!-- Total Links -->
                        <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" alignment="CENTER" styleClass="summary-box">
                            <Label text="Total Links" styleClass="summary-subtitle"/>
                            <Label fx:id="totalLinksLabel" text="0" styleClass="summary-value"/>
                        </VBox>

                        <!-- Webpage Links -->
                        <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" alignment="CENTER" styleClass="summary-box">
                            <Label text="Webpage Links" styleClass="summary-subtitle"/>
                            <Label fx:id="webpageLinksLabel" text="0" styleClass="summary-value"/>
                        </VBox>

                        <!-- Broken Links -->
                        <VBox GridPane.rowIndex="1" GridPane.columnIndex="1" alignment="CENTER" styleClass="summary-box">
                            <Label text="Broken Links" styleClass="summary-subtitle"/>
                            <Label fx:id="brokenLinksLabel" text="0" styleClass="summary-value-red"/>
                        </VBox>
                    </GridPane>
                </VBox>

                <!-- ===== Filters Section ===== -->
                <VBox spacing="12" prefWidth="400" styleClass="card">
                    <Label text="Filters" styleClass="section-title"/>

                    <!-- URL Filter -->
                    <VBox spacing="8">
                        <Label text="URL" styleClass="filter-label"/>
                        <HBox spacing="8">
                            <ComboBox fx:id="urlSelectBox" promptText="Select" prefWidth="100"/>
                            <TextField fx:id="urlFilterField" promptText="Enter URL" HBox.hgrow="ALWAYS"/>
                        </HBox>
                    </VBox>

                    <!-- Status Code Filter -->
                    <VBox spacing="8">
                        <Label text="Status Code" styleClass="filter-label"/>
                        <HBox spacing="8">
                            <ComboBox fx:id="statusSelectBox" promptText="Select" prefWidth="100"/>
                            <TextField fx:id="statusFilterField" promptText="200 / 400 / 500..." HBox.hgrow="ALWAYS"/>
                        </HBox>
                    </VBox>
                </VBox>
            </HBox>

            <!-- ===== Result Section ===== -->
            <VBox spacing="12">
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label text="Result" styleClass="section-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="exportButton" text="Export" styleClass="btn-export"/>
                </HBox>

                <!-- Table Result -->
                <TableView fx:id="resultTable" styleClass="result-table" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="resultCol" text="Result" prefWidth="200"/>
                        <TableColumn fx:id="urlCol" text="URL" prefWidth="600"/>
                    </columns>
                </TableView>

                <!-- Pagination -->
                <HBox spacing="8" alignment="CENTER">
                    <Button text="&lt;" styleClass="pagination-btn"/>
                    <Button text="1" styleClass="pagination-btn"/>
                    <Button text="2" styleClass="pagination-btn active"/>
                    <Button text="3" styleClass="pagination-btn"/>
                    <Button text="4" styleClass="pagination-btn"/>
                    <Button text="5" styleClass="pagination-btn"/>
                    <Button text="&gt;" styleClass="pagination-btn"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
