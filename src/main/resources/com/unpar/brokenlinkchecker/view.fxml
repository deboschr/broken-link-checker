<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane 
   fx:id="root" 
   xmlns:fx="http://javafx.com/fxml" 
   fx:controller="com.unpar.brokenlinkchecker.Controller" 
   stylesheets="@style.css">

    <top>
        <HBox fx:id="titleBar" styleClass="title-bar">
            <Label text="Broken Link Checker" styleClass="title-text" HBox.hgrow="ALWAYS" />
            
            <!-- ini yang mendorong tombol ke kanan -->
            <Region HBox.hgrow="ALWAYS" /> 

            <Button text="&#x2014;" fx:id="minimizeBtn" styleClass="title-btn" />
            <Button text="&#x2610;" fx:id="maximizeBtn" styleClass="title-btn" />
            <Button text="&#x2715;" fx:id="closeBtn">
                <styleClass>
                    <String fx:value="title-btn"/>
                    <String fx:value="close-btn"/>
                </styleClass>
            </Button>
        </HBox>
    </top>


    <center>
        <VBox spacing="24" styleClass="content-root">

            <!-- ===================== INPUT & CONTROLL BUTTON ===================== -->
            <HBox fx:id="inputContainer" spacing="10" alignment="CENTER_LEFT" styleClass="input-wrapper">
                <TextField fx:id="seedUrlField" promptText="Enter Seed URL..." HBox.hgrow="ALWAYS" styleClass="input-field"/>
                <Button fx:id="startBtn" text="Start" styleClass="btn-control"/>
                <Button fx:id="stopBtn" text="Stop" styleClass="btn-control"/>
            </HBox>


            <!-- ===================== SUMMARY & FILTERS ===================== -->
            <GridPane hgap="16" VBox.vgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50" />
                    <ColumnConstraints percentWidth="50" />
                </columnConstraints>

                <!-- ===== SUMMARY ===== -->
                <VBox fx:id="summaryCard" styleClass="card" spacing="12" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS">
                    <Label text="Summary" styleClass="section-title" />

                    <HBox spacing="12" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                        <!-- Checking Status -->
                        <VBox styleClass="summary-box" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                            <Label text="Checking Status" styleClass="summary-subtitle" />
                            <Label fx:id="checkingStatusLabel" text="....." styleClass="status-idle" />
                        </VBox>

                        <!-- Total Links -->
                        <VBox styleClass="summary-box" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                            <Label text="Total Links" styleClass="summary-subtitle" />
                            <Label fx:id="totalLinksLabel" text="0" styleClass="summary-value" />
                        </VBox>

                        <!-- Webpage Links -->
                        <VBox styleClass="summary-box" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                            <Label text="Webpage Links" styleClass="summary-subtitle" />
                            <Label fx:id="webpageLinksLabel" text="0" styleClass="summary-value" />
                        </VBox>

                        <!-- Broken Links -->
                        <VBox styleClass="summary-box" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                            <Label text="Broken Links" styleClass="summary-subtitle" />
                            <Label fx:id="brokenLinksLabel" text="0" styleClass="summary-value-red" />
                        </VBox>
                    </HBox>
                </VBox>

                <!-- ===== FILTERS ===== -->
                <VBox fx:id="filtersCard" styleClass="card" spacing="12" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS">
                    <Label text="Filters" styleClass="section-title" />

                    <GridPane hgap="8" vgap="12">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="15" />
                            <ColumnConstraints percentWidth="85" />
                        </columnConstraints>

                        <!-- URL Filter -->
                        <Label text="URL" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="summary-subtitle"/>
                        <HBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="CENTER_LEFT">
                            <ComboBox fx:id="urlFilterOption" prefWidth="150" promptText="Condition..." styleClass="filter-combo">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Equals"/>
                                        <String fx:value="Contains"/>
                                        <String fx:value="Starts With"/>
                                        <String fx:value="Ends With"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                            <TextField fx:id="urlFilterField" promptText="Enter URL..." HBox.hgrow="ALWAYS" styleClass="filter-field"/>
                        </HBox>

                        <!-- Status Code Filter -->
                        <Label text="Status Code" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="summary-subtitle"/>
                        <HBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="CENTER_LEFT">
                            <ComboBox fx:id="statusFilterOption" prefWidth="150" promptText="Condition..." styleClass="filter-combo">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Equals"/>
                                        <String fx:value="Greater Than"/>
                                        <String fx:value="Less Than"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                            <TextField fx:id="statusFilterField" promptText="Enter Status Code..." HBox.hgrow="ALWAYS" styleClass="filter-field"/>
                         </HBox>
                    </GridPane>
                </VBox>
            </GridPane>

            <!-- ===================== RESULT TABLE ===================== -->
            <VBox spacing="12" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER_RIGHT">
                    <Label text="Result" styleClass="section-title" HBox.hgrow="ALWAYS" />
                    <Button fx:id="exportBtn" text="Export" styleClass="btn-export" />
                </HBox>

                <!-- ====== TableView ====== -->
                <TableView fx:id="resultTable" styleClass="result-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="200" />
                        <TableColumn fx:id="urlColumn" text="URL" prefWidth="700" />
                    </columns>
                </TableView>

                <!-- ====== Pagination ====== -->
                <HBox fx:id="paginationContainer" alignment="CENTER" spacing="6" styleClass="pagination-box">
                    <Button text="◀" styleClass="page-btn" />
                    <Button text="1" styleClass="page-btn-active" />
                    <Button text="2" styleClass="page-btn" />
                    <Button text="3" styleClass="page-btn" />
                    <Button text="4" styleClass="page-btn" />
                    <Button text="5" styleClass="page-btn" />
                    <Button text="▶" styleClass="page-btn" />
                </HBox>
            </VBox>

        </VBox>
    </center>

</BorderPane>